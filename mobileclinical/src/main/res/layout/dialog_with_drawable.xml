<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="fill_parent"
    android:background="#ebebeb"
    android:cacheColorHint="#00000000"
    android:orientation="vertical"
    android:gravity="center">
    
    <TextView android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding="7dp"     
        android:gravity="center"            
        style="@style/font_white_size1"
        android:background="@color/textblue"
        android:layout_weight="0" />

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:padding="10dp" android:gravity="center" android:orientation="horizontal">
        
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:visibility="gone"
            android:id="@+id/dialog_img"/>
        
        <TextView android:layout_width="fill_parent" android:layout_height="100dp" android:layout_gravity="center" android:gravity="center"
            android:layout_marginLeft="10dp" style="@style/font_black_size1"
            android:id="@+id/dialog_content"/>
        
    </LinearLayout>
    
        
    <com.winning.mobileclinical.form.EditableSelectInput android:id="@+id/dialog_input"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_margin="5dp" android:background="#ffffff"
        android:visibility="gone">
    </com.winning.mobileclinical.form.EditableSelectInput>


    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_weight="0" android:gravity="center">
        <Button android:id="@+id/dialog_ok"
	        android:layout_width="fill_parent"  android:layout_height="wrap_content"
	        android:text="@string/ok" android:layout_margin="5dp" android:layout_weight="1"
	        style="@style/button_ok_style" />
        
        <Button android:id="@+id/dialog_cancel"
	        android:layout_width="fill_parent"  android:layout_height="wrap_content"
	        android:text="@string/cancel" android:layout_margin="5dp" android:layout_weight="1"
	        style="@style/button_cancel_style" />
    </LinearLayout>
    

</LinearLayout>