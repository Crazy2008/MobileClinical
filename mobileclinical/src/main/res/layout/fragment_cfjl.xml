    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:text="文本"
        android:textColor="#434343"
        android:textSize="@dimen/dn_notetitle" />

    <EditText
        android:id="@+id/bwl_content"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/note_pic_corners"
        android:gravity="left|top"
        android:hint="请输入文字"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minLines="3"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:textColor="#434343"
        android:textColorHint="#889797"
        android:textSize="@dimen/dn_notetitle_write" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:text="照片"
        android:textColor="#434343"
        android:textSize="@dimen/dn_notetitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:visibility="gone"
            android:id="@+id/dn_camera_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:src="@drawable/leftswitch" />

        <com.winning.mobileclinical.layout.HorizontalListView2
            android:id="@+id/add_picturelistview"

            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"></com.winning.mobileclinical.layout.HorizontalListView2>

        <ImageView
            android:id="@+id/add_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:src="@drawable/add_camera_2" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/dn_camera_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:src="@drawable/rightswitch" />

        ·

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="录音"
        android:textColor="#434343"
        android:textSize="@dimen/dn_notetitle" />

    <LinearLayout
        android:id="@+id/dn_ll_record"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:visibility="gone"
            android:id="@+id/dn_record_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:src="@drawable/leftswitch" />

        <com.winning.mobileclinical.layout.HorizontalListView2
            android:id="@+id/date_recordlistview"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2">
        </com.winning.mobileclinical.layout.HorizontalListView2>

        <ImageView
            android:id="@+id/add_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:src="@drawable/add_audio" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/dn_record_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:src="@drawable/rightswitch" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reset"

            />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/save"

            />


    </LinearLayout>


</LinearLayout>
