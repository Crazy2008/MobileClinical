<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/findbedgrid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bedcard_red" >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/fbg_top" >
		  <LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginLeft="@dimen/fbg_name_left"
			    android:paddingTop="@dimen/fbg_name_top" >
			    <ImageView
			        android:id="@+id/findpatient_head"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/head_red"
			        android:contentDescription="head"/>
			    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="vertical" >
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="center_vertical"
			            android:text=""
			     		android:textColor="#FFFFFF"
			     		android:textSize="@dimen/pb_cardname"
			     		android:id="@+id/findpatient_name" />
			        <LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal" >
				        <TextView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="年龄 :"
				            android:textColor="#FFFFFF"
				            android:textSize="@dimen/pb_cardcwh" />
				        <TextView android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text=""
				            android:textColor="#FFFFFF"
				            android:textSize="@dimen/pb_cardcwh"
			            	android:id="@+id/findpatient_age" />
				     </LinearLayout>
				</LinearLayout>
	    </LinearLayout>

        <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center"
		    android:layout_gravity="center"
		    android:layout_marginLeft="@dimen/fbg_circle_left"
		    android:paddingTop="@dimen/fbg_name_top" >
			<TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/findpatient_cwh"
	            android:gravity="center"
	            android:text=""
	            android:textColor="#F70000"
	            android:textSize="@dimen/pb_card"
	            android:background="@drawable/circle_red"/>
		</LinearLayout>
		
    </LinearLayout>
    
     <LinearLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:cacheColorHint="#00000000"
        android:layout_marginLeft="@dimen/fbg_name_left"
        android:paddingTop="@dimen/fbg_blh_top" > 
	    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="病历号 :"
            android:textColor="#999999"
            android:textSize="@dimen/pb_cardcwh"/>
        <TextView  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/pb_cardcwh"
           	android:id="@+id/findpatient_blh"/>
	</LinearLayout>
   <LinearLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:cacheColorHint="#00000000"
        android:layout_marginLeft="@dimen/fbg_name_left" > 
	    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="诊断 :"
            android:textColor="#999999"
            android:textSize="@dimen/pb_cardcwh"/>
        <TextView  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fbg_zd_left"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/pb_cardcwh"
           	android:id="@+id/findpatient_zd"/>
	</LinearLayout>
</LinearLayout>
