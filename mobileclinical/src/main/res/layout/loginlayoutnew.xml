<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/logo_bg"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_imgtotop"
        android:src="@drawable/logo"/>
    
    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="移动查房"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/login_textsize"
	        android:layout_marginTop="@dimen/login_imgtotopimage"
	        />
    
	<LinearLayout 
	    android:layout_width="@dimen/login_editwidth"
	    android:layout_height="@dimen/login_editheight"
	    android:layout_marginTop="@dimen/login_imgtotoptext"
		android:orientation="horizontal"
		android:background="@drawable/login_boder"
		android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/username"
	        android:text="@string/loginid"
	        style="@style/font_gray_size1"
	        android:drawablePadding="15dp"
	        android:layout_marginLeft="15dp"/>
	    <EditText 
	        android:layout_width="0dip"
	        android:layout_weight="3"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/login_textsize"
	        android:textColor="#666666"
	        android:inputType="text"
	        android:background="#00000000"
	        android:id="@+id/login_et_username"
	        />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="@dimen/login_editwidth"
	    android:layout_height="@dimen/login_editheight"
	    android:background="@drawable/login_boder"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/password"
	        android:text="@string/pwd"
	        style="@style/font_gray_size1"
	        android:drawablePadding="15dp"
	        android:layout_marginLeft="15dp"/>
	    <EditText 
	        android:layout_width="0dip"
	        android:layout_weight="3"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/login_textsize"
	        android:textColor="#666666"
	        android:background="#00000000"
	        android:inputType="textPassword"
	        android:id="@+id/login_et_password"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="@dimen/login_editwidth"
	    android:layout_height="@dimen/login_editheight"
	    android:background="@drawable/login_boder"
	    android:id="@+id/login_ksbqlayout"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/bqks"
	        android:text="科室|病区"
	        android:id="@+id/login_ksbq"
	        style="@style/font_gray_size1"
	        android:drawablePadding="15dp"
	        android:layout_marginLeft="15dp"/>
	    <!-- <EditText 
	        android:layout_width="0dip"
	        android:layout_weight="3"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/login_textsize"
	        android:textColor="#666666"
	        android:background="#00000000"
	        android:inputType="textPassword"
	        android:id="@+id/login_et_password"/> -->
	</LinearLayout>
	
	
	<Button 
	    android:layout_width="@dimen/login_editwidth"
	    android:layout_height="@dimen/login_editheight"
	    android:layout_marginTop="40dp"
	    android:background="@drawable/btn_login"
	    android:text="登  录"
	    style="@style/font_white_size1"
	    android:id="@+id/login_bt_submit"/>
</LinearLayout>
