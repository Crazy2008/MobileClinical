<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <Button android:id="@+id/audioplayer_play"
	        android:focusable="false" android:clickable="false"
	        android:layout_width="50dp" android:layout_height="match_parent"
	        android:layout_weight="0" android:background="@drawable/fill4"/>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_weight = "1" android:orientation="vertical" android:background="#ffffff">
        
        <TextView android:id="@+id/audioplayer_exectime"
   	    	android:layout_width="fill_parent" android:layout_height="wrap_content"
   	    	android:padding="2dp" style="@style/font_black_size2"/>
        
        <TextView android:id="@+id/audioplayer_filename"
   	    	android:layout_width="match_parent" android:layout_height="wrap_content" 
   	    	android:singleLine="true" android:text="暂无文件" 
   	    	style="@style/font_white_light_size2" android:paddingLeft="2dp"/>
        
        <ProgressBar android:id="@+id/audioplayer_progressbar"
        	style="?android:attr/progressBarStyleHorizontal"
       		android:layout_width="fill_parent"
       		android:layout_height="3dp"
       		android:progressDrawable="@drawable/media_paly_progressbg"/>
        
    </LinearLayout>
    
    

</LinearLayout>
