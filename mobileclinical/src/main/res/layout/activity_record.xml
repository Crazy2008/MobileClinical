<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD996699"
    android:orientation="vertical"
    tools:context="com.winning.mobileclinical.activity.RecordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="查房语音录入"
        android:textColor="@android:color/white"
        android:textSize="22sp" />
    <!--<ImageView
        android:id="@+id/imageView"
        android:src="@drawable/nei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
    <FrameLayout
        android:layout_marginTop="40dp"
        android:id="@+id/fl_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/background_red" />

        <ImageView
            android:id="@+id/jicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/jieguo" />
        <ImageView
            android:id="@+id/iv_audio_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/audio_center" />



    </FrameLayout>

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:format="00:00:00"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="正在录音..."
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:textSize="22sp"
            android:text="取消"
            android:id="@+id/record_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white"
             />

        <Button

            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="保存"
            android:id="@+id/record_save"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_bule" />


    </LinearLayout>


</LinearLayout>
