<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/setIP">
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"   
	    android:layout_gravity="center_horizontal" 
	    >
	   <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="服务器IP及端口号:"
		    android:textSize="24sp"
		    android:textColor="#53b9d0"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"/>
		<EditText
		    android:layout_width = "420dp" 
			android:layout_height="wrap_content"
			android:id="@+id/et_setIP"
			android:singleLine="true"
			android:inputType="text"
			android:textSize="24sp"
			android:layout_marginTop="10dp"/>
	</LinearLayout>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"   
	    android:layout_gravity="center_horizontal" 
	    >
	   <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="电子病历地址配置:"
		    android:textSize="24sp"
		    android:textColor="#53b9d0"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"/>
		<EditText
		    android:layout_width = "420dp" 
			android:layout_height="wrap_content"
			android:id="@+id/et_setemrIP"
			android:singleLine="true"
			android:inputType="text"
			android:textSize="24sp"
			android:layout_marginTop="10dp"/>
	</LinearLayout>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"   
	    android:layout_gravity="center_horizontal" 
	    >
	   <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="护理病历地址配置:"
		    android:textSize="24sp"
		    android:textColor="#53b9d0"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"/>
		<EditText
		    android:layout_width = "420dp" 
			android:layout_height="wrap_content"
			android:id="@+id/et_sethlblIP"
			android:singleLine="true"
			android:inputType="text"
			android:textSize="24sp"
			android:layout_marginTop="10dp"/>
	</LinearLayout>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"   
	    android:layout_gravity="center_horizontal" 
	    >
	   <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="PACS图像调阅地址配置:"
		    android:textSize="24sp"
		    android:textColor="#53b9d0"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"/>
		<EditText
		    android:layout_width = "420dp" 
			android:layout_height="wrap_content"
			android:id="@+id/et_setpacsIP"
			android:singleLine="true"
			android:inputType="text"
			android:textSize="24sp"
			android:layout_marginTop="10dp"/>
	</LinearLayout>
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_gravity="center_horizontal"  
	    android:paddingBottom="20dp"
	    android:layout_marginTop="20dp">
		<Button
		    android:layout_width = "120dp" 
			android:layout_height="wrap_content"
			android:id="@+id/setIP_confirm"
			android:padding="10dp"
			
            android:textColor="#ffffff"
            android:background="@drawable/btn_select"
			android:text="确认"
			android:textSize="26sp"/>
		<Button
			android:layout_width = "180dp" 
			android:layout_height="wrap_content"
			android:id="@+id/setIP_test"
			android:padding="10dp"
			android:layout_marginLeft="10dp"
			android:textColor="#ffffff"
            android:background="@drawable/btn_select"
			android:text="测试连接"
			android:textSize="26sp"/>
		<Button
			android:layout_width = "120dp" 
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:layout_marginLeft="10dp"
			android:textColor="#ffffff"
            android:background="@drawable/btn_select"
			android:id="@+id/setIP_cancel"
			android:text="取消"
			android:textSize="26sp"/>
	</LinearLayout>
</LinearLayout>