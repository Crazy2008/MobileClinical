<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
Theme.AppCompat theme
    -->

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NoTitleTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="font_gray_size1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#868686</item>
    </style>

    <style name="font_white_size1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="font_white_menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="font_white_light_size1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#7B8189</item>
    </style>

    <style name="font_black_size2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="font_white_light_size2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7B8189</item>
    </style>

    <style name="translucent" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="font_white_size2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="xxdy_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="font_black_size1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0041FF</item>
    </style>

    <style name="button_ok_style">
        <item name="android:background">#0000ff</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:height">38dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_cancel_style">
        <item name="android:background">@drawable/button_cancel_style</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:height">38dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="progressBarHorizontal_color" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_color_horizontal</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>
    
    <style name="my_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_grey</item>
    </style>
    <!--查房便签拍照预览图-->
    <!-- 定义一个样式，继承android系统的对话框样式 android:style/Theme.Dialog-->
    <style name="Theme.FloatActivity" parent="android:style/Theme.Dialog">
        <!-- float_box为我们定义的窗口背景-->
        <item name="android:windowBackground">@drawable/dialog_activity</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="Anim_fade" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>





</resources>