<?xml version="1.0" encoding="UTF-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" >
         <shape >
            <solid android:color="#FF860B"/>
        </shape>
    </item>
   <item android:state_checked="true" >
         <shape >
            <solid android:color="#FF860B"/>
        </shape>
    </item>
    <item android:state_selected="true" >
         <shape >
            <solid android:color="#FF860B"/>
        </shape>
        
    </item>
	<item >
	   <shape >
            <gradient android:startColor="#FF860B"
				android:centerColor="#FB9D3E" android:centerY="0.5"
				android:endColor="#FF860B" android:angle="0" />
        </shape>
	</item>
  
</selector>